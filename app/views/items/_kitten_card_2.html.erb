<div class="col-12 col-sm-6 col-lg-4">
  <div class="card border-light mb-4 animate-up-5">
    <a href="<%= item_path(item.id) %>" class="position-relative">
      <img src="<%= item.image_url %>" class="card-img-top rounded-xl p-2" alt="themesberg office">
    </a>
    <div class="card-body">
      <a href="<%= item_path(item.id) %>">
        <h4 class="h5"><%= item.title %></h4>
      </a>
      <div class="d-flex my-4">
        <span class="star fas fa-star text-warning"></span> 
        <span class="star fas fa-star text-warning"></span> 
        <span class="star fas fa-star text-warning"></span> 
        <span class="star fas fa-star text-warning"></span> 
        <span class="star fas fa-star text-warning"></span>
        <span class="badge badge-pill badge-primary ml-2">5.0</span>
      </div> 
      <div class="d-flex my-4">
        <%= item.description %>
      </div>
    </div>
    <div class="card-footer bg-soft border-top">
      <div class="d-flex justify-content-between">
        <div class="col pl-0">
          <span class="text-muted font-small d-block mb-2">Prix</span>
          <span class="h5 text-dark font-weight-bold"><%= item.price %> â‚¬</span>
        </div>
        <%# on pourrais rajouter une colone nombre de fois vendu si on as le temps
        <div class="col">
          <span class="text-muted font-small d-block mb-2">People</span>
          <span class="h5 text-dark font-weight-bold">24</span>
        </div>
        %>
        <div class="col">
            <%= link_to "Acheter", new_payment_path, class: "btn btn-primary"%>
        </div>
      </div>
    </div>
  </div>
</div>