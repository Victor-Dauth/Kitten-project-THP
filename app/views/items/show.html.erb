 <main>
        <!-- Hero -->

        <div class="section section-lg pt-5">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-lg-8">
                        
                        <div class="tab-content mt-5 mb-3" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="nav-about" role="tabpanel" aria-labelledby="nav-about-tab">
                                <div class="row mb-5">
                                    <div class="col-12">                                            
                                        <%= image_tag @item.image_url, :alt => "kitten img", class:"rounded" %>                                             

                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                    
                    
                    <aside class="col-12 col-lg-4 mt-3 mt-lg-0 mb-5 pt-6">
                       <h2><%= @item.title %> </h2>

                            <p class="mt-5"> <%= @item.description %> </p>
                            <div class="d-flex my-4">
                                <span class="star fas fa-star text-warning"></span> 
                                <span class="star fas fa-star text-warning"></span> 
                                <span class="star fas fa-star text-warning"></span> 
                                <span class="star fas fa-star text-warning"></span> 
                                <span class="star fas fa-star text-warning"></span>
                                <span class="badge badge-pill badge-primary ml-2">5.0</span>
                              </div> 


                        
                                <%# on pourrais rajouter une colone nombre de fois vendu si on as le temps
                                <div class="col">
                                  <span class="text-muted font-small d-block mb-2">People</span>
                                  <span class="h5 text-dark font-weight-bold">24</span>
                                </div>
                                %>
                            <% if user_signed_in? %>
                            <div class="card bg-soft border-light p-3 mt-5">

                              <div class="d-flex justify-content-between">
                                <div class="col pl-0">
                                  <span class="text-muted font-small d-block mb-2">Prix</span>
                                  <span class="h5 text-dark font-weight-bold"><%= @item.price %> €</span>
                                </div>
                                <div class="col">
                                    <%= link_to "Ajouter au panier", orders_path(item_id: @item.id), method: 'POST' , class: "btn btn-primary"%>
                                </div>

                            <%else %>
                            <div class="card bg-soft border-light p-3 mt-5">

                              <div class="d-flex justify-content-between flex-column">
                                <div class="pl-0">
                                  <span class="text-muted font-small d-block mb-2">Prix</span>
                                  <span class="h5 text-dark font-weight-bold"><%= @item.price %> €</span>
                                </div>
                                <div class="d-flex mt-3">
                                    <%= link_to "Se connecter pour acheter cette image", new_user_session_path, class: "btn btn-primary"%>
                                </div>

                            <% end %>
                        </div>
  

                     </div>

                    </aside>
                </div>
            </div>
        </div>
        <section class="section bg-soft">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h4 class="mb-5 font-weight-bold">Les autres photos que vous pourriez aimer</h4>
                    </div>
            
                        <div class="tab-pane fade show active" id="link-example-14" role="tabpanel" aria-labelledby="tab-link-example-14">
                        <div class="row">
                          <!-- Cards-->
                          <% @item_rand.each do |item| %>

                              <div class="col-12 col-sm-6 col-lg-4">
                                  <div class="card border-light mb-4 animate-up-5">
                                    <a href="<%= item_path(item) %>" class="position-relative">
                                      <%= image_tag item.image_url, :alt => "kitten img", class:"card-img-top rounded-xl p-2" %>


                                   </a>
                                    <div class="card-body">
                                      <a href="<%= item_path(item) %>">
                                        <h4 class="h5"><%= item.title %></h4>
                                      </a>
                                      <div class="d-flex my-4">
                                        <span class="star fas fa-star text-warning"></span> 
                                        <span class="star fas fa-star text-warning"></span> 
                                        <span class="star fas fa-star text-warning"></span> 
                                        <span class="star fas fa-star text-warning"></span> 
                                        <span class="star fas fa-star text-warning"></span>
                                        <span class="badge badge-pill badge-primary ml-2">5.0</span>
                                      </div> 
                                      
                                    </div>
                                   
                                  </div>
                                </div>

                              <%end%>
                          <!-- End of Card -->
                        </div>
                      
                      </div>

                </div>
            </div>
        </section>
        <!-- End of section -->
    </main>